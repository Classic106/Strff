{
  "routes": [
    {
      "method": "GET",
      "path": "/customers",
      "handler": "customer.find",
      "config": {
        "policies": ["global::isAuthenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/customers/count",
      "handler": "customer.count",
      "config": {
        "policies": ["global::isAuthenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/customers/:id",
      "handler": "customer.findOne",
      "config": {
        "policies": ["global::isAuthenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/customers",
      "handler": "customer.create",
      "config": {
        "policies": ["global::isAuthenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/customers/:id",
      "handler": "customer.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/customers/:id",
      "handler": "customer.delete",
      "config": {
        "policies": []
      }
    }
  ]
}
