{
  "name": "store",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "develop:backend": "yarn --cwd backend develop",
    "develop:frontend": "wait-on http://localhost:1337/admin && yarn --cwd frontend develop",
    "build:backend": "yarn --cwd backend build",
    "build:frontend": "yarn --cwd frontend build",
    "start:backend": "yarn --cwd backend start",
    "start:frontend": "yarn --cwd frontend start",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -p develop:*",
    "build": "cross-env FORCE_COLOR=1 npm-run-all -l -p build:*",
    "start": "cross-env FORCE_COLOR=1 npm-run-all -l -p start:*"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "wait-on": "5.2.1",
    "cross-env": "7.0.3"
  }
}
